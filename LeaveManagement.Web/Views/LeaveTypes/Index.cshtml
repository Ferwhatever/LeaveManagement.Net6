@model IEnumerable<LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Indice</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa-solid fa-square-plus"></i> Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>

            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i> </a> |
                <a data-id="@item.Id" button class="btn btn-danger deleteBtn" type="button"><i class="fa-solid fa-trash-can"></i> </a> |
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i> </a>
            </td>
        </tr>
}
    </tbody>
</table>
<!-- Chapter 19 around min 9 this is a bit complicated-->
<form id="deleteFrom" asp-action="Delete">
        <input type="hidden" id="leaveTypeId" name="Id" />
    </form>

@section Scripts{
    <script>
        $(function() {
            $('.table').DataTable();
            $('.deleteBtn').click(function(e) {
                swal({
                    title: "Estas seguro?",
                    text: "Estas seguro de que quieres borrar esto?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if(confirm){
                        var btn = $(this);
                        var id = btn.data("id");
                        //var Name=btn.data("name")
                        $('#leaveTypeId').val(id);
                        $('#deleteFrom').submit();
                        //alert("Record Borrado")

                    }
                });
            });
        });
    </script>
}